+    print(
+        f"\n--- Overflow Strategy: {strategy.upper()} (sampling_rate={sampling_rate}) ---"
+    )
+    settings = LoggingSettings(
+        level="INFO",
+        json_console="pretty",
+        queue_enabled=True,
+        queue_maxsize=5,  # Small queue for demonstration
+        queue_batch_size=2,
+        queue_batch_timeout=0.5,
